{
  "name": "DiamondPoC-contracts",
  "version": "0.1.2",
  "description": "Proof of concept contracts for Diamond blueprinter",
  "main": "index.js",
  "scripts": {
    "deploy": "npx hardhat deploy",
    "deploy:smallstore" : "DIAMOND_NAME=SmallStore npx hardhat deploy",
    "deploy:bigstore" : "DIAMOND_NAME=BigStore npx hardhat deploy",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "accounts": " npx hardhat accounts",
    "verify": "npx hardhat verify",
    "node:polygon" : "./node.sh polygon",
    "node:mainnet" : "./node.sh mainnet",
    "node:bsc" : "./node.sh bsc",
    "deploy:polygon" : "NETWORK=polygon npx hardhat deploy --network localhost",
    "deploy:mainnet" : "NETWORK=mainnet npx hardhat deploy --network localhost",
    "fund:bsc" : "npx hardhat --network localhost fund --fundnetwork bsc",
    "fund:polygon" : "npx hardhat --network localhost fund --fundnetwork polygon",
    "test" : "npx hardhat test",
    "test:smallstore" : "DIAMOND_NAME=SmallStore npx hardhat test",
    "test:bigstore" : "DIAMOND_NAME=BigStore npx hardhat test"
  },

  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.5.0",
    "@openzeppelin/hardhat-upgrades": "^1.16.1",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^5.2.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.6.1",
    "hardhat": "^2.9.1",
    "hardhat-contract-sizer": "^2.5.0",
    "hardhat-deploy": "^0.11.0",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^2.6.0",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.7",
    "solidity-coverage": "^0.7.20"
  },
  "author": "Carlos Ramos",
  "license": "MIT",
  "private": true
}
